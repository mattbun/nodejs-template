{
  "name": "nodejs-template",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "private": "true",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "debug": "node --inspect-brk dist/index.js",
    "test": "jest",
    "format": "prettier -w ./src"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "18.19.127",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "cz-conventional-changelog": "3.3.0",
    "jest": "29.7.0",
    "prettier": "2.8.8",
    "semantic-release": "20.1.3",
    "ts-jest": "29.4.4",
    "ts-node": "10.9.2",
    "typescript": "4.9.5"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
